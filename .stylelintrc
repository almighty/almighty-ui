{
  "rules": {
    "block-closing-brace-newline-after": "always",
    "block-closing-brace-newline-before": "always-multi-line",
    "block-no-empty": [true, {
      "message": "Do not leave empty blocks.",
      "severity": "warning"
    }],
    "block-opening-brace-newline-after": ["always-multi-line", {
      "message": "Always add a line after ending a brace",
      "severity": "warning"
    }],
    "block-opening-brace-space-before": ["always-multi-line", {
      "message": "Add a space before starting a brace.",
      "severity": "warning"
    }],
    "color-hex-case": ["lower", {
      "message": "Use lowercase hex codes for better readability.",
      "severity": "warning"
    }],
    "color-hex-length": ["short", {
      "message": "Use shorthand hex codes when possible",
      "severity": "warning"
    }],
    "color-no-invalid-hex": true,
    "declaration-no-important": [true, {
      "message": "If this is necessary, you must get approval for a line item exclusion.",
      "severity": "warning"
    }],
    "declaration-block-no-duplicate-properties": [true, {
      "ignore": ["consecutive-duplicates-with-different-values"]
    }],
    "declaration-block-trailing-semicolon": "always",
    "declaration-block-semicolon-space-before": "never",
    "declaration-block-semicolon-space-after": "always-single-line",
    "declaration-block-semicolon-newline-before": "never-multi-line",
    "declaration-block-semicolon-newline-after": "always-multi-line",
    "font-family-name-quotes": ["always-where-recommended", {
      "message": "You need to change your quotes to follow Font-Family guidelines.",
      "severity": "warning"
    }],
    "function-calc-no-unspaced-operator": true,
    "function-comma-space-after": ["always-single-line", {
      "message": "Always include a space after a comma.",
      "severity": "warning"
    }],
    "function-comma-space-before": ["never", {
      "message": "Never put a space before a comma.",
      "severity": "warning"
    }],
    "function-name-case": ["lower", {
      "message": "You should really use lower case name for functions in the stylesheets.",
      "severity": "warning"
    }],
    "function-url-quotes": ["always", {
      "message": "Quotes around URLs are required - please fix.",
      "severity": "warning"
    }],
    "function-whitespace-after": "always",
    "font-family-no-duplicate-names": true,
    "number-leading-zero": ["never", {
      "message": "Do not add zeros before a number.",
      "severity": "warning"
    }],
    "number-no-trailing-zeros": [null, {
      "message": "Do not add trailing zeros to numbers.",
      "severity": "warning"
    }],
    "no-eol-whitespace": true,
    "string-no-newline": true,
    "string-quotes": ["single", {
      "message": "Only use single quotes in your stylesheets.",
      "severity": "warning"
    }],
    "unit-case": "lower",
    "unit-no-unknown": [true, {
      "severity": "warning"
    }],
    "unit-whitelist": [
      "px",
      "%",
      "deg",
      "s",
      "em",
      "rem",
      "vh",
      "vw",
      "*pf-custom-navbar-item-height"
    ],
    "value-list-comma-space-after": "always-single-line",
    "value-list-comma-space-before": "never",
    "value-no-vendor-prefix": [true, {
      "message": "You should use an autoprefixer to add vendor prefixes.",
      "severity": "warning"
    }],
    "shorthand-property-no-redundant-values": [true, {
      "message": "You are using redundant values - please fix.",
      "severity": "warning"
    }],
    "property-case": "lower",
    "selector-attribute-brackets-space-inside": "never",
    "selector-attribute-operator-space-after": "never",
    "selector-attribute-operator-space-before": "never",
    "selector-pseudo-class-case": "lower",
    "selector-pseudo-class-parentheses-space-inside": "never",
    "selector-pseudo-element-case": "lower",
    "selector-pseudo-element-colon-notation": "single",
    "selector-pseudo-element-no-unknown": true,
    "selector-type-case": "lower"
  }
}
